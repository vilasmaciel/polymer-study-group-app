      app-logic#app(view="{{view}}")
      core-animated-pages(selected="{{view}}" fit transitions="hero-transition cross-fade")
        splash-screen(name="splash-screen" id="splash-screen" fit)
        message-list(name="message-list" id="message-list" fit)

    // build:js /scripts/app.js
    script(src="/scripts/app.js")
